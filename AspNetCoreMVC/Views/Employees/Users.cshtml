@model IEnumerable<AspNetCoreMVC.Models.EmployeeView>
@{
    ViewBag.Title = "Home";
}

<hr />
<a asp-action="Edit" class="btn btn-success">Добавить</a>
<hr />
<table class="table table-dark table-striped">
    @foreach (var item in Model)
    {
    <tr>
        <td><a asp-action="Edit" asp-route-id="@item.id"><i class="fa fa-edit"></i></a></td>
        <td>Имя: @item.Name</td>
        <td>Фамилия: @item.Surname</td>
        <td><a asp-action="ViewModel" asp-route-id="@item.id">Подробно</a> </td>
        <td><a asp-action="Delete" asp-route-id="@item.id"><i class="fa fa-trash-o"></i></a></td>
    </tr>
    }
</table>

